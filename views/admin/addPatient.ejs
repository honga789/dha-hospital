<% customCSS = `<link rel="stylesheet" href="/css/admin/addPatient.css">` %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Patient</title>
    <link rel="icon" href="/images/icon.png">
    <%- customCSS %>
</head>
<body>
    <main>
        <h1>Add New Patient</h1>
        <% if (errorMessage) { %>
            <p class="error-message"><%= errorMessage %></p>
        <% } %>
        
        <form action="/admin/patients/new" method="POST">
            <!-- Chọn Username -->
            <div class="form-group">
                <label for="user_name">Username:</label>
                <input type="text" id="user_name" name="user_name" placeholder="Enter Username" required>
            </div>

            <!-- Chọn Password -->
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter Password" required>
            </div>

            <!-- Chọn Full Name -->
            <div class="form-group">
                <label for="full_name">Full Name:</label>
                <input type="text" id="full_name" name="full_name" placeholder="Enter Full Name" required>
            </div>

            <!-- Chọn Birthdate -->
            <div class="form-group">
                <label for="birthdate">Birthdate:</label>
                <input type="date" id="birthdate" name="birthdate" required>
            </div>

            <!-- Chọn Gender -->
            <div class="form-group">
                <label for="gender">Gender:</label>
                <select id="gender" name="gender" required>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>

            <!-- Chọn Phone Number -->
            <div class="form-group">
                <label for="phone_number">Phone Number:</label>
                <input type="text" id="phone_number" name="phone_number" placeholder="Enter Phone Number" required>
            </div>

            <!-- Chọn Address -->
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" placeholder="Enter Address" required>
            </div>

            <!-- Chọn Email (Có thể null) -->
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter Email (optional)">
            </div>

            <!-- Chọn Blood Type (Có thể null) -->
            <div class="form-group">
                <label for="blood_type_id">Blood Type:</label>
                <select id="blood_type_id" name="blood_type_id">
                    <option value="">Select Blood Type (optional)</option>
                    <% bloodTypes.forEach(function(bloodType) { %>
                        <option value="<%= bloodType.blood_type_id %>"><%= bloodType.blood_type_name %></option>
                    <% }); %>
                </select>
            </div>

            <!-- Chọn Allergies (Có thể null) -->
            <div class="form-group">
                <label for="allergies">Allergies:</label>
                <textarea id="allergies" name="allergies" placeholder="Enter Allergies (optional)"></textarea>
            </div>

            <button type="submit" class="submit-btn">Add Patient</button>
        </form>
    </main>
</body>
</html>

<% customJS = "" %>
