<% customCSS = `<link rel="stylesheet" href="/css/admin/editMedication.css">` %>  <!-- Link đến CSS cho Medications -->

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Medication</title>
        <link rel="icon" href="/images/icon.png">
    </head>
    <body>
        <main>
            <h1>Edit Medication Information</h1>

            <% if (errorMessage) { %>
                <p class="error-message"><%= errorMessage %></p>
            <% } %>

            <form action="/admin/medicine/<%= editMedication.medication_id %>" method="POST">
                <div class="form-group">
                    <label for="medication_name">Medication Name:</label>
                    <input type="text" id="medication_name" name="medication_name" value="<%= editMedication.medication_name %>" placeholder="Medication Name" required class="input-field">
                </div>

                <div class="form-group">
                    <label for="unit">Unit:</label>
                    <input type="text" id="unit" name="unit" value="<%= editMedication.unit %>" placeholder="Unit" class="input-field">
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" placeholder="Description" class="input-field"><%= editMedication.description %></textarea>
                </div>

                <button type="submit" class="submit-btn">Update Medication</button>
            </form>

            <a href="/admin/medicine" class="back-link">Back to Medication List</a>
        </main>
    </body>
    </html>

<% customJS = "" %>
